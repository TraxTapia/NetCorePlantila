@using MAC.Models.Medicamentos;
@model VMMedicamentoDetalle

@{
    ViewData["Title"] = "Edit";
    List<SelectListItem> listUnidades = new List<SelectListItem>();
    listUnidades.Add(new SelectListItem() { Value = "", Text = "Seleccionar" });
    listUnidades.Add(new SelectListItem() { Value = "1", Text = "MG" });
}
<div class="modal fade" id="divEditMedicamento" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog mw-100 w-100">
        <div class="modal-content">
            <div class="modal-header">
                <div class="col-sm-8">
                    <h3 class="box-title">Detalle Medicamento</h3>
                </div>
                <div class="col-sm-4" style="text-align:right;">
                    <input type="checkbox" class="js-switch" asp-for="Activo" data-switchery="true" style="display: none;">
                    <button type="button" class="btn btn-box-tool" data-dismiss="modal">
                        <i class="fa fa-close"></i>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <form asp-action="Edit" id="frmEditarSal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="ID" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <label class="form-control">@Model.ID</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="NombreGenerico" class="control-label"></label>
                                </div>
                                <div class="col-8">
                                    <input asp-for="NombreGenerico" class="form-control" />
                                    <span asp-validation-for="NombreGenerico" class="text-danger"></span>
                                </div>
                                <div class="col-1">
                                    <button class="btn btn-default btn-circle" title="Sales del Medicamento">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="Concentracion" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="Concentracion" class="form-control" />
                                    <span asp-validation-for="Concentracion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="UnidaddeMedidaId" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    @Html.DropDownList("UnidaddeMedidaId", listUnidades, new { @class = "form-control" })
                                    <span asp-validation-for="UnidaddeMedidaId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="PresentacionId" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    @Html.DropDownList("PresentacionId", listUnidades, new { @class = "form-control" })
                                    <span asp-validation-for="PresentacionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="Cantidad" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="Cantidad" class="form-control" />
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="UnidadId" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    @Html.DropDownList("UnidadId", listUnidades, new { @class = "form-control" })
                                    <span asp-validation-for="UnidadId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="GrupoId" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    @Html.DropDownList("GrupoId", listUnidades, new { @class = "form-control" })
                                    <span asp-validation-for="GrupoId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="Clave" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="Clave" class="form-control" />
                                    <span asp-validation-for="Clave" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="SubClave" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="SubClave" class="form-control" />
                                    <span asp-validation-for="SubClave" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="PrincipalIndicacion" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="PrincipalIndicacion" class="form-control" />
                                    <span asp-validation-for="PrincipalIndicacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="OtrasIndicaciones" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="OtrasIndicaciones" class="form-control" />
                                    <span asp-validation-for="OtrasIndicaciones" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="TipoActualizacion" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="TipoActualizacion" class="form-control" />
                                    <span asp-validation-for="TipoActualizacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="NumeroActualizacion" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="NumeroActualizacion" class="form-control" />
                                    <span asp-validation-for="NumeroActualizacion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <label asp-for="Pediatrico" class="control-label"></label>
                                </div>
                                <div class="col-9">
                                    <input class="i-checks" type="checkbox" asp-for="Pediatrico">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12" style="text-align:right;">
                                    <button type="button" class="btn btn-primary btn-sm" onclick="return gurdarSal();"><i class="fa fa-save"></i>&nbsp;Guardar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-6">
                        @await Html.PartialAsync("~/Areas/Medicamentos/Views/Shared/_SalPartial.cshtml", new VMMedicamentoDetalle())
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;Cancelar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
